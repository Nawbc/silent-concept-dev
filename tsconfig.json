{
	"compilerOptions": {
		"jsx": "react",
		"strictNullChecks": true,
		"esModuleInterop": true,
		"removeComments": true,
		"noImplicitThis": true,
		"noEmitOnError": true,
		"noUnusedParameters": false,
		"noUnusedLocals": false,
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"target": "es5",
		"sourceMap": true,
		"outDir": "release/es",
		"lib": [
			"dom",
			"esnext",
			"dom.iterable"
		]
	},
	"exclude": [
		"node_modules",
		"lib/assets",
		"example"
	],
	"include": [
		"app",
		"lib"
	]
}
